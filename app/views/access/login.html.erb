<%=  flash[:notice] %>
<div class="login_form"> 
	<h2>Admin Login</h2>
	<div id="inner">
		<%= form_tag(:action => 'attempt_login') do |f| %>
			<ul>
				<li>
					 <%= label_tag(:username) %> <br>
					 <%= text_field_tag(:username) %> 	
				</li>
				<li>
					 <%= label_tag(:password) %> <br>
					 <%= password_field_tag(:password) %> 
				</li>
				<li>
					 <%= submit_tag("Login") %> 	
				</li>
			</ul>	
		<% end %>
	</div>
</div>
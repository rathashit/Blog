<% @page_title = "View Page"%>
<div class="buttons" style="width: 1000px;margin:auto;margin-bottom: 10px;">
	<div class="back-link">
		<%= link_to("Back to Pages", {:action => 'index'}) %>
	</div>
</div>
<div class="page-show">		
	<div class="view">
		<ul>
			<li>
				<h4>Title</h4>
				<p><%= @page.title %></p>
			</li>
			<li>
				<h4>Category</h4>
				<p><%= @page.category.name %></p>
			</li>
			<li>
				<h4> Image</h4>
				<% if @page.image_url? %>
					<p> <%= image_tag @page.image_url.url(:thumb) %>
						    <%= link_to("Remove", :action => 'remove_img', :id => @page.id) if @page.image_url%>
					    </p>
				<% else %>
					<p> <%= image_tag('default-no-img.jpg') %> </p>
				<% end %>
			</li>
			
			<li>
				<h4>Visible</h4>
				<p class="status"><%= status_tag(@page.visible) %></p>
			</li>
			<li>
				<h4>Content</h4>
				<p><%= @page.content %></p>
			</li>
		</ul>
	</div>
</div>
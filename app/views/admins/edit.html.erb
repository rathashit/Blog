<% @page_title = "Edit Admin"%>
<div class="page-form">
      <div class="buttons">
            <div class="back-link">
                  <%= link_to("Back to Admins", {:action => 'index'}) %>
            </div>
      </div>
	<div class="form">
		
		<%= form_for(:admin, :url => {:action => 'update', :id => @admin.id}) do |f| %>
			<div id="inner-form">
                <%= render(:partial => 'form', :locals => {:f => f}) %>       
            </div>
            <div class="buttons">
                <%= submit_tag("Update Admin") %>
            </div>
		<% end %>
		
	</div>
</div>
<div class="index_main">
	<h3>Admins</h3>
	<div class="add_new">
		<%= link_to("Add new Admin", :action => 'new') %>
	</div>
	<div class="index_content">
		<table>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Username</th>
				<th>E-mail</th>
				<th>Action</th>
			</tr>
			<% @admins.each do |admin| %>
			<tr>
				<td><%= admin.first_name %></td>			
				<td><%= admin.last_name %></td>
				<td><%= admin.username %></td>
				<td><%= admin.email %></td>
				<td class="action">
					<%= link_to("Show",{:action => 'show', :id => admin.id}) %>
					<%= link_to("Edit",{:action => 'edit', :id => admin.id}) %>
					<%= link_to("Delete",{:action => 'delete', :id => admin.id}) %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
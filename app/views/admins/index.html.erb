<% @page_title = "All Admins"%>
<div class="pages-index">
	<div class="buttons">
		<div class='back-link'>
			<%= link_to('Back to Menu', {:action => 'index', :controller => 'access'}) %>
		</div>
		<div class="add-new">
			<%= link_to("Add new admin", {:action => 'new'}) %>
		</div>
	</div>
	<div class="page-content">
		<table>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Username</th>
				<th>E-mail</th>
				<th>Action</th>
			</tr>
			<% @admins.each do |admin| %>
			<tr>
				<td><%= admin.first_name %></td>			
				<td><%= admin.last_name %></td>
				<td><%= admin.username %></td>
				<td><%= admin.email %></td>
				<td class="action">
					<%= link_to("Show",{:action => 'show', :id => admin.id}) %>
					<%= link_to("Edit",{:action => 'edit', :id => admin.id}) %>
					<%= link_to("Delete",{:action => 'delete', :id => admin.id}) %>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>